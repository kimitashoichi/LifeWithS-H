<div class="container">
  <h1 class="contact-new-title">Post Contact</h1>
   <div class="contact-form">
	  <%= form_for @contact do |f| %>
		 <div class="contact-label">Name</div>
		 <div class="contact-body">
		 	<%= f.text_field :contact_name, :class =>"form-control", :placeholder => "名前を入力してください（空白では送信できません）" %>
		 </div>

		<div class="contact-label">Email</div>
		 <div class="contact-body">
			<%= f.text_field :contact_email, :class =>"form-control", :placeholder => "メールアドレスを入力してください" %>
		 </div>


		 <div class="contact-label">Title</div>
		 <div class="contact-body">
		 	<%= f.text_field :contact_title, :class =>"form-control", :placeholder => "タイトルを入力してください（1文字以上、30文字以内）" %>
		 </div>

		 <div class="contact-label">Body</div>
		 <div class="contact-body">
		 	<%= f.text_area :contact_text, :class =>"form-control", :size => "20x10", :placeholder => "お問い合わせ内容を入力してください（1文字以上、200文字以内）" %>
		 </div>

		 <div class="contact-btn">
		   <%= f.submit 'SEND', :class => "cp_btn" %>
		 </div>
	  <% end %>
   </div>
</div>