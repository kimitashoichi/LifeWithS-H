<div class="container">
<h1 class="contact-all-title">Contacts ALL</h1>

<% if @users_contacts.present? %>
   <div class="col-lg-6 col-lg-offset-3">
      <table class="table">
      	<thead>
      		<th class="table-title">Title</th>
          <th></th>
      		<th class="table-title">Post date</th>
          <th></th>
      	</thead>

     <% @users_contacts.each do |c| %>
      	<thead>
      		<th><%= c.contact_title %></th>
          <th></th>
          <th><%= c.created_at.strftime("%Y.%m.%d") %></th>
      		<th><%= link_to '詳細', contact_path(c.id), :class =>"btn btn-info" %>
           <%= link_to '削除',contact_path(c.id), method: :delete, :class =>"btn btn-danger", data: {confirm: '本当に削除しますか？'} %></th>
      	</thead>
     <% end %>
    </table>
  </div>
<% else %>
  <h3 class="contacts-none-message">お問い合わせはまだありません</h3>
  <% end %>
</div>