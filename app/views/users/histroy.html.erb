<div class="container">
  <h1 class="favorites-title">Browsing Histroy</h1>

  <% if @browsing_histories.present? %>
     <% @browsing_histories.each do |h| %>
	   <%= link_to article_path(h.article_id) do %>
		<div class="favorites-article">
		  <div class="col-lg-4 favorites-image">
		   <%= attachment_image_tag h.article.article_images.last, :image, :size=>"250x250" %>
		  </div>
		  <div class="col-lg-6 favorites-article-box">
			<h2 class="favorites-article-title"><%= h.article.article_title %></h2>
			<p class="favorites-article-created"><%= h.article.created_at.strftime("%Y年%m月%d日 %H:%M") %></p>
		  </div>
		</div>
	 <% end %>
  <% end %>

   <div class="paginate">
	 <%= paginate @browsing_histories, class: "paginate" %>
   </div>
<% else %>
   <h1 class="favorites-message-none">閲覧した記事がありません</h1>
   <% end %>
</div>
