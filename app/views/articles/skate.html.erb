<h1>Skate</h1>

<% @skate_articles.each do |skate| %>
  <% skate.article_images.each do |image| %>
    <%= attachment_image_tag image, :image, :size=>"100x100" %>
  <% end %>
 <p><%= skate.article_title %></p>
 <p><%= skate.created_at.strftime('%Y/%m/%d') %></p>
 <!-- 動画投稿ができているか試しで表示中、最終的には消す -->
 <p><iframe width="300" height="300" src= "<%= skate.movie_url %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen fs="0" origin showinfo="0"></iframe></p>

<!-- URLの変換ができているか試しで表示中、最終的には消す -->
 <p><%= text_url_to_link(h(skate.article_url)).html_safe %></p>
<% end %>
