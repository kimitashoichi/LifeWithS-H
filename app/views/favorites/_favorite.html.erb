<div class="clip-field">
   <% if user_signed_in? %>
		<% if article.favorited_by?(current_user) %>
		    <%= link_to article_favorites_path(article), method: :delete,:class=>"cp_btn", :style=>"color:black;", remote: true do %>
		       Remove
		    <% end %>
	  <% else %>
		    <%= link_to article_favorites_path(article), method: :post,:class=>"cp_btn", :style=>"color:black;", remote: true do %>
	           Clip
		    <% end %>
		<% end %>
 <% else %>
   <h2 claas="clip-count-text"><%= article.favorites.count %> Clip</h2>
  <% end %>
</div>